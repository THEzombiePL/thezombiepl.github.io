{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},

	"files": {
		"includes": ["**/*", "!node_modules", "!dist", "!build"]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 100,
		"useEditorconfig": false
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},

	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	}
}
